<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springboard.mapper.MemberMapper">
	
	<resultMap type="org.springboard.domain.MemberVO" id="memberMap">
		<id property="userid" column="userid"/>
		<result property="userid" column="userid"/>
		<result property="userpw" column="userpw"/>
		<result property="username" column="username"/>
		<result property="email" column="email"/>
		<result property="regDate" column="regdate"/>
		<result property="updateDate" column="updatedate"/>
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	
	<resultMap type="org.springboard.domain.AuthVO" id="authMap">
		<result property="userid" column="userid"/>
		<result property="auth" column="auth"/>
	</resultMap>
	
	<select id="read" resultMap="memberMap">
		SELECT mem.userid, userpw, username, email, enabled, regdate, updatedate, auth
		from tbl_member mem LEFT OUTER JOIN tbl_member_auth auth on mem.userid = auth.userid
		WHERE mem.userid = #{userid}
	</select>
	
	<insert id="regist">
		INSERT into tbl_member (userid, userpw, username, email)
		values(#{userid}, #{userpw}, #{username}, #{email})
	</insert>
	
	<insert id="registAuth">
		INSERT into tbl_member_auth (userid, auth)
		values(#{userid}, 'ROLE_USER')
	</insert>
	
	<select id="checkRegist" resultType="string">
		select ${name} from tbl_member where ${name} = #{text}
	</select>
	
</mapper>
